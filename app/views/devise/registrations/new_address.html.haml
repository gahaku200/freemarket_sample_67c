%h2 住所情報登録
= form_for @address do |f|
  = render "devise/shared/error_messages", resource: @address

  .field
    = f.label :address_first_name
    %br/
    = f.text_field :address_first_name
  .field
    = f.label :address_last_name
    %br/
    = f.text_field :address_last_name

  .field
    = f.label :address_first_name_kana
    %br/
    = f.text_field :address_first_name_kana
  .field
    = f.label :address_last_name_kana
    %br/
    = f.text_field :address_last_name_kana

  .field
    = f.label :zipcode
    %br/
    = f.text_field :zipcode
  .field
    = f.label :prefecture
    %br/
    = f.text_field :prefecture
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :municipality
    %br/
    = f.text_field :municipality
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.label :building_name
    %br/
    = f.text_field :building_name
  .field
    = f.label :phone_num
    %br/
    = f.text_field :phone_num

  .actions
    = f.submit "Sign up"
= render "devise/shared/links"