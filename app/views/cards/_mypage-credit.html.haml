.l-content
  %section.l-chapter-container
    %h2.l-chapter-head クレジットカード情報入力
    %form#add-card-form.l-single-inner.registration-form
      .l-single-content
        = form_tag(make_cards_path, method: :post, id: 'charge-form', name: "inputForm") do
          .form-group
            %label カード番号
            %span.form-require 必須
            = text_field_tag "number", "", class: 'input-default', type: "text", id: 'card_number', maxlength: "16", placeholder: "    半角数字のみ"
            .registration-error{type: "hidden", value: "必須項目です"}
            %ul#card-no-error-wrapper.has-error-text
            %ul.signup-card-list
              %li
                = image_tag 'visa.svg',class: 'signup-card-list-icon',size: '49x20'
              %li
                = image_tag 'master-card.svg',class: 'signup-card-list-icon',size: '34x20'
              %li
                = image_tag 'saison-card.svg',class: 'signup-card-list-icon',size: '30x20'
              %li
                = image_tag 'jcb.svg',class: 'signup-card-list-icon',size: '32x20'
              %li
                = image_tag 'american_express.svg',class: 'signup-card-list-icon',size: '21x20'
              %li
                = image_tag 'dinersclub.svg',class: 'signup-card-list-icon',size: '32x20'
              %li
                = image_tag 'discover.svg',class: 'signup-card-list-icon', size: '32x20'

          .form-group.signup-form-expire
            %label 有効期限
            %span.form-require 必須
            %br/
            .select-wrap.half
              %select#exp_month.select-default{id: "exp_month", type: "text"}
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %i.icon-arrow-bottom
              %span 月
            .select-wrap.half
              %select#exp_year.select-default{id: "exp_year", type: "text"}
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
                %option{value: "2030"}30
                %option{value: "2031"}31
              %i.icon-arrow-bottom
              %span 年
            %ul#expire-mm-error-wrapper.has-error-text
            %ul#expire-yy-error-wrapper.has-error-text
          .form-group
            %label{:for => "payment_card_security_code"} セキュリティコード
            %span.form-require 必須
            = text_field_tag "cvc", "", class: 'input-default', type: "text", id: "cvc", maxlength: "4" ,placeholder: "    カード背面４桁もしくは３桁の番号"
                    
            #card_token
              = submit_tag "追加する", class: "btn-default btn-red", id: "token_submit", type: 'button'
