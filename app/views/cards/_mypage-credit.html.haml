.l-content
  %section.l-chapter-container
    %h2.l-chapter-head クレジットカード情報入力
    %form#add-card-form.l-single-inner.registration-form
      .l-single-content
        .form-group
          %label カード番号
          %span.form-require 必須
          %input#payment_card_no.input-default{"data-input-type" => "card", :maxlength => "19", :placeholder => "半角数字のみ", :type => "text", :value => ""}/
          %ul#card-no-error-wrapper.has-error-text
          %ul.signup-card-list
            %li
              = image_tag 'visa.svg',class: 'signup-card-list-icon',size: '49x20'
            %li
              = image_tag 'master-card.svg',class: 'signup-card-list-icon',size: '34x20'
            %li
              = image_tag 'saison-card.svg',class: 'signup-card-list-icon',size: '30x20'
            %li
              = image_tag 'jcb.svg',class: 'signup-card-list-icon',size: '32x20'
            %li
              = image_tag 'american_express.svg',class: 'signup-card-list-icon',size: '21x20'
            %li
              = image_tag 'dinersclub.svg',class: 'signup-card-list-icon',size: '32x20'
            %li
              = image_tag 'discover.svg',class: 'signup-card-list-icon', size: '32x20'

        .form-group.signup-form-expire
          %label 有効期限
          %span.form-require 必須
          %br/
          .select-wrap.half
            %select#payment_card_expire_mm.select-default
              %option{:value => "01"} 01
              %option{:value => "02"} 02
              %option{:value => "03"} 03
              %option{:value => "04"} 04
              %option{:value => "05"} 05
              %option{:value => "06"} 06
              %option{:value => "07"} 07
              %option{:value => "08"} 08
              %option{:value => "09"} 09
              %option{:value => "10"} 10
              %option{:value => "11"} 11
              %option{:value => "12"} 12
            %i.icon-arrow-bottom
            %span 月
          .select-wrap.half
            %select#payment_card_expire_yy.select-default
              %option{:value => "20"} 20
              %option{:value => "21"} 21
              %option{:value => "22"} 22
              %option{:value => "23"} 23
              %option{:value => "24"} 24
              %option{:value => "25"} 25
              %option{:value => "26"} 26
              %option{:value => "27"} 27
              %option{:value => "28"} 28
              %option{:value => "29"} 29
              %option{:value => "30"} 30
            %i.icon-arrow-bottom
            %span 年
          %ul#expire-mm-error-wrapper.has-error-text
          %ul#expire-yy-error-wrapper.has-error-text
        .form-group
          %label{:for => "payment_card_security_code"} セキュリティコード
          %span.form-require 必須
          %input#payment_card_security_code.input-default{:placeholder => "カード背面4桁もしくは3桁の番号", :type => "number", :value => ""}/
          %ul#security-code-error-wrapper.has-error-text
          .signup-seqcode
            .signup-seqcode-info{"data-js" => "show-tips-content"}
              カードの裏面をご参照ください。
              %br
              = image_tag 'seq-card.png', width: '240'
        %input#user_id{:name => "user_id", :type => "hidden", :value => "604740673"}/
        %input#encrypted_card_data{:name => "encrypted_card_data", :type => "hidden"}/
        %p#primary-error.has-error-text
        %input{:name => "after_save_callback", :type => "hidden", :value => ""}/
        %button#submit-button.btn-default.btn-red{:type => "button"} 追加する
