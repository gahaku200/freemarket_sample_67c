%header.mainHeader
  .headerIn
    .headerHeader
      %h1.icon
        = link_to '/' do
          = image_tag src='logo.png'
      .searchbox
        %form
          %input{type: 'hidden'}
          %input{placeholder: 'キーワードから探す'}
          %button
            .searchbox__icon
              = image_tag src='icon-search 1.png'
          %input{type: 'hidden'}
      %ul.resultlists
    .nav
      %ul.listsLeft
        %li.listsLeft__item.listsLeft__item--first
          = link_to 'カテゴリー', '#', id: 'catBtn'
        %li.listsLeft__item
          = link_to 'ブランド', '#', id: 'brandBtn'
      - if user_signed_in?
        %ul.listsRight
          %li.listsRight__item.listsRight__item--login
            = link_to 'ログアウト', destroy_user_session_path, method: :delete
          %li.listsRight__item.listsRight__item--new
            = link_to 'マイページ', mypage_path
      - else
        %ul.listsRight
          %li.listsRight__item.listsRight__item--login
            = link_to 'ログイン', new_user_session_path
          %li.listsRight__item.listsRight__item--new
            = link_to '新規会員登録', select_registrations_products_path